{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "npm",
    "isShellCommand": true,
    "showOutput": "always",
    "suppressTaskName": true,
    "tasks": [
        {
            "taskName": "install",
            "args": ["install"]
        },
        {
            "taskName": "dev",
            "args": ["run", "dev"]
        },
        {
            "taskName": "build",
            "args": ["run", "build"]
        },
        {
            "taskName": "clean",
            "args": ["run", "clean"]
        },
        {
            "taskName": "start",
            "args": ["start"]
        }
    ]
}